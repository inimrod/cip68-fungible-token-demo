{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020", "DOM"],
        "module": "nodenext",
        "rootDir": "./src",
        "moduleResolution": "nodenext",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        },
        "outDir": "./build",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules"]
}